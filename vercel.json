{
  "env": {
    "NODE_EXTRA_CA_CERTS": "certs/prod-ca-2021.crt"
  },
  "functions": {
    "app/api/**/route.[jt]s": {
      "includeFiles": "certs/**"
    }
  },
  "crons": [
    {
      "path": "/api/internal/generate-invoices",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/jobs/expire-orders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/internal/cron/notifications-drain",
      "schedule": "*/1 * * * *"
    },
    { "path": "/api/internal/triggers/customer-inactive?days=30&limit=1000",      
      "schedule": "0 9 * * *"
    }
  ]
}
